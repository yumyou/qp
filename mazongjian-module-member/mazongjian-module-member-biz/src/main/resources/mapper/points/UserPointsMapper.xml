<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yanzu.module.member.dal.mysql.points.UserPointsMapper">

    <select id="selectListByUserId" resultType="com.yanzu.module.member.dal.dataobject.points.UserPointsDO">
        SELECT * FROM member_user_points
        WHERE user_id = #{userId} AND deleted = 0
        ORDER BY create_time DESC
        <if test="limit != null and limit > 0">
            LIMIT #{limit}
        </if>
    </select>

</mapper>
