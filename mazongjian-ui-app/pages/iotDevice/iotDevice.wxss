/* pages/iotDevice/iotDevice.wxss */

.container {
  height: 100vh;
  overflow: auto;
  background-color: #f5f5f5;
}


/* 主要内容区域 */
.main-content {
  padding-top: 0;
}

/* 设备统计卡片 */
.device-stats-card {
  background-color: #fff;
  border-radius: 12px;
  margin: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.stats-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 16px;
  padding-bottom: 8px;
  border-bottom: 1px solid #f0f0f0;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
}

.stats-item {
  text-align: center;
  padding: 12px;
  background-color: #f8f9fa;
  border-radius: 8px;
}

.stats-number {
  display: block;
  font-size: 24px;
  font-weight: 600;
  color: #07c160;
  margin-bottom: 4px;
}

.stats-label {
  font-size: 12px;
  color: #666;
}

/* 设备列表 */
.device-list {
  padding: 12px;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  padding: 0 4px;
}

.list-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.device-items {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.device-item {
  background-color: #fff;
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 12px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  border: 1px solid #f0f0f0;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  pointer-events: auto;
  user-select: none;
}

.device-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #07c160 0%, #06ad56 100%);
}

.device-item:active {
  transform: translateY(-2px);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12);
}

.device-item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16px;
}

.device-item-name {
  display: flex;
  align-items: center;
  gap: 8px;
  flex: 1;
}

.device-name-text {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.device-iot-badge {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  font-size: 10px;
  font-weight: 600;
  padding: 2px 6px;
  border-radius: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.device-item-right {
  display: flex;
  align-items: center;
  gap: 8px;
}

.device-item-status {
  font-size: 12px;
  font-weight: 500;
  padding: 4px 8px;
  border-radius: 12px;
  background-color: #f5f5f5;
  white-space: nowrap;
}

.device-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
  pointer-events: auto;
  z-index: 1;
}

.device-item:active .device-arrow {
  background-color: #e8f5e8;
  transform: translateX(2px);
}

.device-item-details {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
  margin-bottom: 16px;
}

/* 当只有3个字段时，调整布局 */
.device-item-details .detail-row:nth-child(3) {
  grid-column: 1 / -1;
  max-width: 50%;
}

.detail-row {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.detail-label {
  font-size: 12px;
  color: #999;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.detail-value {
  font-size: 14px;
  color: #333;
  font-weight: 500;
  word-break: break-all;
  line-height: 1.4;
}

.device-item-footer {
  border-top: 1px solid #f0f0f0;
  padding-top: 12px;
  margin-top: 8px;
}

.device-not-supported {
  display: flex;
  align-items: center;
  gap: 6px;
  color: #ff4d4f;
  font-size: 12px;
  font-weight: 500;
}


/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  margin: 20px 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  color: #999;
}

.empty-text {
  margin-top: 12px;
  font-size: 14px;
  color: #999;
}

/* 按钮样式优化 */
.van-button--primary {
  background-color: #07c160;
  border-color: #07c160;
}

.van-button--primary:active {
  background-color: #06ad56;
  border-color: #06ad56;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .device-stats-card {
    margin: 8px;
    padding: 12px;
  }
  
  .stats-title {
    font-size: 15px;
  }
  
  .device-item {
    padding: 16px;
    margin-bottom: 8px;
  }
  
  .device-item-details {
    grid-template-columns: 1fr;
    gap: 8px;
  }
  
  .device-item-details .detail-row:nth-child(3) {
    grid-column: 1;
    max-width: 100%;
  }
  
  .device-name-text {
    font-size: 16px;
  }
  
  .detail-value {
    font-size: 13px;
  }
}

/* 动画效果 */
.device-item {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.device-item:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.device-item:active {
  transform: translateY(0);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 设备列表容器优化 */
.device-items {
  padding: 0 4px;
}

/* 设备统计卡片优化 */
.device-stats-card {
  margin: 16px 12px;
  border-radius: 16px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
}

/* 列表头部优化 */
.list-header {
  padding: 0 8px;
  margin-bottom: 20px;
}

.list-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  color: #ff4d4f;
}

.error-text {
  margin-top: 12px;
  font-size: 14px;
  color: #ff4d4f;
}

