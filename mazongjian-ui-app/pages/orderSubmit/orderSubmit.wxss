/* pages/orderSubmit/orderSubmit.wxss */
page {
  background: #f5f5f5;
}

.container {
  padding: 20rpx 40rpx;
  padding-bottom: 140rpx;
}

/* 房间信息卡片 */
.room-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.room-info {
  text-align: left;
  margin-bottom: 30rpx;
}

.room-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.club-name {
  font-size: 28rpx;
  color: #666;
}

/* 预订类型选择 */
.booking-type {
  display: flex;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.type-item {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  background: #f8f8f8;
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.type-item.active {
  background: #07c160;
  color: #fff;
  border-color: #07c160;
}

/* 时长选择 */
.duration-select {
  background: #fff;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  border-radius: 16rpx;
  padding: 20rpx 0;
  gap: 15rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.duration-item {
  flex: 1;
  padding: 15rpx 10rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  background: #f8f8f8;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  text-align: center;
}

.duration-item.active {
  background: #07c160;
  color: #fff;
  border-color: #07c160;
}

/* 时间选择 */
.time-select {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.time-label {
  font-size: 28rpx;
  color: #07c160;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.time-inputs {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.time-input {
  flex: 1;
  height: 80rpx;
  width: auto;
  white-space: nowrap;
  padding: 0 20rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s;
}

.time-input.active {
  color: #07c160;

  border-color: #07c160;
}

.time-input.disabled {
  background: #f8f8f8;
  color: #999;
  border-color: #e8e8e8;
}

.time-separator {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  padding: 0 10rpx;
}
.time-text{
  color: #07c160;
}
.icon-editor {
  margin-left: 10rpx;
  font-size: 32rpx;
  transform: translateY(2rpx);
}

/* 时间轴 */
.timeline {
  margin-bottom: 30rpx;
}

.timeline-slots {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  position: relative;
  padding: 0 10rpx;
  overflow-x: auto;
  gap: 8rpx; /* 减小时间点之间的间距 */
}

.timeline-slots::before {
  content: '';
  position: absolute;
  top: 30rpx;
  left: 20rpx;
  right: 20rpx;
  height: 3rpx;
  background: #e8e8e8;
  z-index: 1;
}

.time-slot {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx; /* 减小内部元素间距 */
  min-width: 5rpx; /* 减小最小宽度 */
  width: 5rpx;
  flex-shrink: 0;
  cursor: pointer;
  transition: all 0.3s;
}

.time-slot:active {
  transform: scale(0.95);
}

.slot-marker {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #e8e8e8;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s;
}

.slot-marker.disabled {
  background: #e8e8e8;
  border-color: #e8e8e8;
}

.slot-marker.low-price {
  background: #07c160;
  border-color: #07c160;
}

.slot-marker.high-price {
  background: #ff9500;
  border-color: #ff9500;
}

.slot-time {
  font-size: 20rpx;
  color: #aaa;
  line-height: 1;
  white-space: nowrap;
  transition: all 0.3s;
}

.time-slot:active .slot-time {
  color: #07c160;
}

.timeline-legend {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: #666;
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.legend-dot.unavailable {
  background: #e8e8e8;
}

.legend-dot.available {
  background: #fff;
  border: 2rpx solid #e8e8e8;
}

.legend-dot.low-price {
  background: #07c160;
}

.legend-dot.high-price {
  background: #ff9500;
}

/* 订单详情 */
.order-details {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  padding-bottom: 0;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item .label {
  font-size: 26rpx;
  color: #666;
}

.detail-item .value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 套餐列表 */
.package-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.package-item {
  padding: 25rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  transition: all 0.3s;
  position: relative;
}

.package-item:last-child {
  margin-bottom: 0;
}

.package-item.active {
  border-color: #07c160;
  background: #f0f9f0;
}

.package-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  position: relative;
}

.package-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.package-price {
  color: #e91717;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 40rpx;
}

.package-check {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.package-check .iconfont {
  color: #fff;
  font-size: 24rpx;
}

.package-details {
  font-size: 24rpx;
  color: #999;
}

.detail-line {
  margin-bottom: 8rpx;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.detail-line:last-child {
  margin-bottom: 0;
}

.detail-label {
  color: #666;
  margin-right: 10rpx;
}

.detail-value {
  color: #999;
}

/* 底部预订栏 */
.booking-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.price-info {
  flex: 1;
}

.total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #e91717;
  margin-bottom: 5rpx;
}

.discount-info {
  font-size: 24rpx;
  color: #e91717;
}

.book-btn {
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 0rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  min-width: 160rpx;
}

.book-btn:active {
  background: #06ad56;
}

/* 未登录样式 */
.containerlogin {
  padding: 0 60rpx;
}

.photo {
  padding: 60rpx 0;
  text-align: center;
}

.photo .img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin: 0 auto;
  overflow: hidden;
}

.photo .img image {
  width: 100%;
  height: 100%;
}

.photo .name {
  margin-top: 20rpx;
}

.loginBtn {
  margin-top: 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
}

/* 押金说明样式 */
.deposit-note {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
  font-weight: normal;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .timeline-legend {
    justify-content: center;
  }
  
  .legend-item {
    margin: 0 10rpx;
  }
  
  .duration-select {
    justify-content: space-between;
  }
  
  .duration-item {
    flex: none;
    width: calc(20% - 12rpx);
  }
}
