/* 页面基础样式 */
page {
  height: 100%;
  width: 100%;
  background-color: #f3f2f2;
}

.position {
  position: relative;
  height: 100%;
}

.custom-label {
  width: 100%;
  height: 200rpx;
  margin-top: 60rpx;
  font-size: 32px;
  color: rgba(254, 243, 204, 1);
  text-align: left;
  opacity: 1;
}
.home-text{
  width: 100%;
  margin-top: 80rpx;
  margin-bottom: -50rpx;

  padding: 20rpx;
  box-sizing: border-box;
}

.container {
  width: 100%;
  height: 200vh;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  position: relative;
  overflow: hidden;
}

/* 门店列表样式 */

/* 筛选标签样式 */
.filter-tabs {
  display: flex;
  justify-content: start;
  align-items: center;
  padding: 20rpx 0;
  background: transparent;
  margin: 20rpx 0;
}

.filter-tab {
  text-align: center;
  padding: 20rpx 10rpx;
  margin: 0 20rpx;
  font-size: 38rpx;
  color: #f7d371;
  font-weight: bold;

  position: relative;
  transition: all 0.3s ease;
}

.filter-tab.active {
  color: #f7d371;
  font-size: 48rpx;
  font-weight: bold;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  color: #ffd45d;
  background: #ffd45d;
  border-radius: 2rpx;
}

.store-lists {
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
  overflow: auto;
  height:calc(100vh - 500rpx);

  -webkit-overflow-scrolling: touch; /* iOS 平滑滚动 */
  scrollbar-width: none; /* Firefox 兼容 */
}
.store-lists::-webkit-scrollbar {
  display: none; /* Chrome/Safari/Edge 隐藏滚动条 */
  width: 0 !important;
  height: 0 !important;
  background: transparent;
}
.store-card {
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

/* 门店图片容器 */
.store-image-container {
  width: 100%;
  height: 300rpx;
  position: relative;
  overflow: hidden;
}

.store-card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 收藏按钮样式 */
.favorite-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  transition: all 0.3s ease;
}

.favorite-btn:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.5);
}

.app-icon {
  margin-left: auto;
  display: flex;
  height: 38rpx;
  border-radius: 8rpx;
  /* 圆角 */
  overflow: hidden;
  /* 隐藏内部溢出部分 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  /* 可选：阴影效果 */
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  border: 2rpx solid #FF7F00;
}

/* 左侧橙色部分 */
.left-section {
  flex: 1;
  background-color: rgba(247, 207, 161, 0.74);
  /* 橙色背景 */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2rpx;

  font-size: 24rpx;
}

/* 右侧白色部分 */
.right-section {
  flex: 1;
  padding: 2rpx;
  font-size: 24rpx;
  background-color: #FFFFFF;
  /* 白色背景 */
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #FF9500;
  /* 分隔线（可选） */
}

/* 文字样式 */
.left-section text,
.right-section text {
  color: #FF8000;
  font-weight: bold;

}

.right-section text {
  color: #FF8000;
  /* 右侧文字橙色 */
}

/* 门店信息内容区域 */
.store-card-content {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  background: #fff;
}

/* 门店标题 */
.store-card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

/* 门店信息项 */
.store-card-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.store-card-info:last-child {
  margin-bottom: 0;
}

.info-icon {
  width: 64rpx;
  height: 64rpx;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-icon32 {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-text {
  flex: 1;
}

/* 操作按钮区域 */
.room-card-actions {
  display: flex;
  border-top: 1px solid #f0f0f0;
  background: #fafafa;
}

.action-btn-2 {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 180rpx;
  height: 58rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  background: #4CDF8A;
  border-radius: 10rpx 10rpx 10rpx 10rpx;

}

.action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  position: relative;
  transition: all 0.3s ease;
}




.action-btn.consult-btn {
  color: #666;
  background: #fafafa;
}

.action-btn.consult-btn:active {
  background: #f0f0f0;
}

.action-btn.reserve-btn {
  color: #fff;
  background: #4CAF50;
}

.action-btn.reserve-btn:active {
  background: #45a049;
}

.btn-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

/* 房间卡片悬停效果 */
.room-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.12);
}

/* 如果房间被禁用 */
.room-card.disabled {
  opacity: 0.6;
}

.room-card.disabled .action-btn.reserve-btn {
  background: #ccc;
  color: #999;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .room-card-title {
    font-size: 30rpx;
  }

  .room-card-info {
    font-size: 22rpx;
  }

  .action-btn {
    font-size: 26rpx;
  }
}

/* 加载动画 */
.room-card {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 空状态样式 */
.room-lists-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.room-lists-empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.room-lists-empty text {
  font-size: 28rpx;
}

.background {
  position: absolute;
  top: 0;
  left: 0;
