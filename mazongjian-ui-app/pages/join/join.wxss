/* pages/join/join.wxss */
page{
  background: #f5f5f5;
}
.container{
  padding: 30rpx;
}
.picker{
  color: #000;
}
.noPicker{
  color: #ccc;
  font-size: 28rpx;
  text-align: left;
}
.form{
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
}
.form .note{
  background: #fdf6ec;
  padding: 0 20rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #999;
  margin: 30rpx;
}
.btns{
  display: flex;
  margin-top: 50rpx;
}
.btns .btn{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border-radius: 60rpx;
}
.btns .tel{
  border-width: 1rpx;
  border-style: solid;
}
.success{
  width: 600rpx;
  text-align: center;
  margin: 100rpx auto;
}
.success .text{
  font-size: 40rpx;
  margin: 10rpx 0 50rpx;
}
.success .info{
  text-align: left;
}

/* 自定义图片上传样式 */
.upload-section {
  padding: 30rpx 20rpx;
  background: #fff;
}

.upload-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
  margin-bottom: 8rpx;
}

.upload-subtitle {
  font-size: 24rpx;
  color: #969799;
  margin-bottom: 20rpx;
}

/* 图片上传样式优化 */
.van-uploader {
  padding: 20rpx 0;
}

.van-uploader__upload {
  background-color: #f7f8fa;
  border: 2rpx dashed #dcdee0;
  border-radius: 8rpx;
}

.van-uploader__upload-text {
  color: #969799;
  font-size: 24rpx;
}

.van-uploader__preview-image {
  border-radius: 8rpx;
  overflow: hidden;
}

.van-uploader__preview-delete {
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.van-cell__title {
  flex: 1 ;
  max-width: 6.2rem;
}