<!-- pages/favorite/favorite.wxml -->
<view class="container">
  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading}}">
    <van-loading type="spinner" size="24px" />
    <text class="loading-text">加载中...</text>
  </view>
  <!-- 门店列表 -->
  <view class="store-list" wx:elif="{{favoriteStores.length > 0}}">
    <view class="store-item" wx:for="{{favoriteStores}}" wx:key="storeId" bindlongpress="onLongPressStore" data-store="{{item}}">
      <view class="store-image">
        <image src="{{item.headImg || '/logo.png'}}" mode="aspectFill"></image>
        <view class="favorite-btn" bindtap="unfavoriteStore" data-store="{{item}}">
          <van-icon name="star" size="20px" color="#ff6b6b" />
        </view>
      </view>
      <view class="store-info">
        <view class="store-name">{{item.storeName}}            <view class="status-text {{item.status === 0 ? 'open' : 'closed'}}">
                {{item.status === 0 ? '营业中' : '暂停营业'}}
              </view></view>
        <view class="store-details">
          <view class="store-status-address">
            <view class="store-status" wx:if="{{item.status !== undefined}}">
  
            <view class="store-address">{{item.address}}</view>
              
            </view>

          </view>
          <view class="store-actions">
            <view class="book-btn" bindtap="goToOrder" data-store="{{item}}">
              <van-icon name="calendar-o" size="16px" />
              <text>立即预订</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- 空状态 -->
  <view class="empty-state" wx:else>
    <image src="/img/empty.png" mode="aspectFit" class="empty-image"></image>
    <text class="empty-text">暂无收藏门店</text>
    <text class="empty-desc">收藏喜欢的门店，方便下次快速预订</text>
    <navigator url="../doorList/doorList" class="go-store-btn">去发现门店</navigator>
  </view>
</view>